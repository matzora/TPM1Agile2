{% extends '::base.html.twig' %} {% block stylesheets %} {{ parent() }}
<link rel="stylesheet" href="{{ asset('css/subscribe.css') }}"
	type="text/css" media="all" />
{% endblock %} {% block body %}
<section class="cover">
	<div class="cover_content">
		<div class="subscription_bloc connection">
			<h1 class="section_title">Inscrivez-vous</h1>
			{{ form_start(form, {'attr':{'class': 'subscription_form connection_form'}}) }} {#
			Les erreurs générales du formulaire #} {{ form_errors(form) }}

			<!--identity-->
			<div class="connection_form_entries">

				<div class="form-group">
					<ul>
						<li>
							{{ form_label(form.email) }}
							{{ form_errors(form.email) }} 
							{{ form_widget(form.email, {'attr': {'class': 'form_control'}}) }}
						</li>

						<li>
							{{ form_label(form.username) }}
							{{ form_errors(form.username) }} 
							{{ form_widget(form.username, {'attr': {'class': 'form_control'}}) }}
						</li>

						<li>{{ form_row(form.plainPassword, {'attr': {'class': 'form_control'}}) }}</li>
					</ul>
				</div>
				
				<div class="grey_btn validation_button subscription_validation_button">
					<input type="submit" value="{{ 'registration.submit'|trans }}"/>
				</div>
			</div>
			<div class="form-inline password">
				<div class="pass_line">{{ form_row(form.plainPassword) }}</div>
			</div>
			<!--identity end-->

			

			{{ form_rest(form) }} {{ form_end(form) }}
		</div>
	</div>
</section>
{% endblock %}
